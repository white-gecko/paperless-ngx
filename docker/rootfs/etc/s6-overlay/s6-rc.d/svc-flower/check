#!/command/with-contenv bashio
# shellcheck shell=bash

bashio::log.info "Checking if we should start flower..."

if [[ -n  "${PAPERLESS_ENABLE_FLOWER}" ]]; then
	# Small delay to allow celery to be up first
	bashio::log.info "Starting flower in 5s"
	sleep 5
	s6-svc -U /run/s6/services/svc-flower
else
	bashio::log.info "Not starting flower"
fi
